.error {
  margin-top: 10%;
}
.error .text {
  margin: 30 rpx 0 0 0;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #ccc;
  text-align: center;
  font-size: 26rpx;
}
.error .icon {
  margin: 0 auto;
  width: 150rpx;
  height: 150rpx;
}
.error .icon image {
  width: 100%;
  height: 100%;
}
.error .btn {
  margin-top: 10%;
  background: -webkit-gradient(linear, right top, left top, from(#f53647), to(#fd973c));
  background: -webkit-linear-gradient(right, #f53647, #fd973c);
  background: -o-linear-gradient(right, #f53647, #fd973c);
  background: linear-gradient(to left, #f53647, #fd973c);
  width: 50%;
  -webkit-border-radius: 20px;
          border-radius: 20px;
}

